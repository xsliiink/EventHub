{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",        // Важно для корректной работы импортов
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}